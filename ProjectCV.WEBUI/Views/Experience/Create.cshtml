@using ProjectCV.DAL.DTOs.ExperienceDTO;
@model ExperienceCreateDTO;

@{
    ViewData["Title"] = "Certificates";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">CV Maker Panel</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard v2</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div> 
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Create a new experience or <a href="/Experience/Update" style="color:blue">click to update</a> </h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <div class="column">
        </div>
        <form asp-action="Create" asp-controller="Experience" method="post">

            <input type="hidden" />
            <div class="card-body">
                <div class="form-group">


                    <label> Company Name </label>
                    <input asp-for="CompanyName" class="form-control">                    

                    <div class="form-group">
                        <label>Start Date  </label>
                        <input name="StartDate" type="datetime" value="@Model?.StartDate.ToString(" MM-dd-yyyy")" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>End Date  </label>
                        <input name="EndDate" type="datetime" value="@Model?.EndDate.ToString("MM-dd-yyyy")" class="form-control">
                    </div>
                    <label> Title </label>
                    <input asp-for="Title" class="form-control">
                    <label> Text </label>
                    <input asp-for="Text"  class="form-control">

                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                </div>
        </form>
        
    </div>
</div>