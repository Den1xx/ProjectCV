@using ProjectCV.DAL.DTOs.CertificatesDTO
@model CertificatesCreateDTO;

@{
    ViewData["Title"] = "Certificates";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">CV Maker Panel</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard v2</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Update Certificates or <a href="/Certificate/Update" style="color:blue">click to update</a> </h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-action="Create" asp-controller="Certificate" method="post">

            <input type="hidden" />
            <div class="card-body">
                <div class="form-group">


                    <label> Certificate Name </label>
                    <input name="Name" type="text" value="@Model.Name" class="form-control">

                    <label> Institution Name </label>
                    <input name="Institution" type="text" value="@Model?.Institution" class="form-control">

                    <div class="form-group">
                        <label>Start Date  </label>
                        <input name="StartDate" type="datetime" value="@Model?.StartDate.ToString(" MM-dd-yyyy")" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>End Date  </label>
                        <input name="EndDate" type="datetime" value="@Model?.EndDate.ToString("MM-dd-yyyy")" class="form-control">
                    </div>                   

                </div>


                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
        </form>
    </div>
</div>